<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.splash" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>splash</name>
    <description>
        splash
    </description>
    <author email="sanarajasekhar@gmail.com" href="http://splash.com">
        splash Enterprises
    </author>
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "true" />
    <platform name="android">
    <icon src="resources/ldpi.png" density="ldpi" />
    <icon src="resources/mdpi" density="mdpi" />
    <icon src="resources/hdpi.png" density="hdpi" />
    <icon src="resources/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/hdpisp.png" density="port-hdpi"/>
    <splash src="res/ldpisp.png" density="port-ldpi"/>
    <splash src="res/mdpisp.png" density="port-mdpi"/>
    <splash src="res/xhdpisp.png" density="port-xhdpi"/>
</platform>
    <content src="index.html" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
</widget>
